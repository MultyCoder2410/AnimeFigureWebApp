@model AnimeFigureModel

@{
    ViewData["Title"] = "Catalog";
}

<link rel="stylesheet" href="~/css/MainCatalog.css" asp-append-version="true" />
<script href="js/site.js"></script>

<div class="SearchBar">

    <input type="text" id="SearchbarInput" name="MainSearchbar" placeholder="Search">

    <div class="FilterDropdown">

        <input type="button" class="DropdownButton" value="Filter">
        <div class="DropdownContent">

            <div class="DropdownSubContent">

                <div class="DropDownCategory" id="Type">

                    <p>Type</p>
                    <hr>

                    @foreach (AnimeFigureWebApp.Models.Type type in Model.Types)
                    {

                        <div>

                            <input id="@type.TypeId" type="checkbox" />
                            <label>@type.Name</label>

                        </div>

                    }

                </div>

                <div class="DropDownCategory" id="Brand">

                    <p>Brand</p>
                    <hr>

                    @foreach (Brand brand in Model.Brands)
                    {

                        <div>

                            <input id="@brand.BrandId" type="checkbox"/>
                            <label>@brand.Name</label>

                        </div>

                    }

                </div>

                <div class="DropDownCategory" id="Origin">

                    <p>Origin</p>
                    <hr>

                    @foreach (Origin origin in Model.Origins)
                    {

                        <div>

                            <input id="@origin.OriginId" type="checkbox" />
                            <label>@origin.Name</label>

                        </div>

                    }

                </div>

            </div>

        </div>

    </div>

    <div class="VerticalDiv">

        <a asp-action="Create">
            <input type="button" value="Add figure">
        </a>

    </div>

</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Figures[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Figures[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Figures[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Figures[0].Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Figures) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AnimeFigureId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AnimeFigureId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AnimeFigureId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
